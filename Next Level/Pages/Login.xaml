<Window x:Class="Next_Level.Pages.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" 
        Height="600" 
        Width="400"
        WindowStyle="None"
        Background="{DynamicResource PrimaryBackgroundColor}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid Background="{DynamicResource PrimaryBackgroundColor}"
                  MouseDown="Grid_MouseDown">
                <Button HorizontalAlignment="Right" 
                        Margin="2"
                        Content="{DynamicResource close}" 
                        Tag="IsCloseButton"
                        Click="Button_Close" 
                        Style="{StaticResource IconButtonsStyle}"/>
                <Button 
                    HorizontalAlignment="Right" 
                    Margin="2 2 30 2" 
                    Style="{DynamicResource IconButtonsStyle}" 
                    Content="{DynamicResource minimize}" 
                    Click="Button_Minimize" 
                    Foreground="White"/>
            </Grid>
            
            <Border Grid.Row="1" 
                    Background="{DynamicResource PrimaryBackgroundColor}" 
                    CornerRadius="8" 
                    Padding="30" 
                    Margin="10 0 10 10" 
                    MouseDown="Border_MouseDown">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Foreground="{DynamicResource PrimaryTextColor}" 
                               Margin="0 15 0 0" 
                               Style="{StaticResource TitleText}" >
                        <Run Text="Sign in"/>
                        <LineBreak/>
                        <Run/>
                    </TextBlock>
                    <Border x:Name="loginBorder" 
                            BorderBrush="Gray"
                            Background="{DynamicResource TertiaryBackgroundColor}"
                            BorderThickness="1"  
                            CornerRadius="5"  
                            Width="259" 
                            Margin="0 0 0 20">
                        <Grid Margin="7 9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image 
                                Source="/Assets/Images/user_logo.png" 
                                Height="20" />
                            <TextBlock x:Name="textEmail" 
                                       MouseDown="textEmail_MouseDown" 
                                       Text="Login" 
                                       Style="{StaticResource textHint}" 
                                       Foreground="{DynamicResource PrimaryTextColor}" 
                                       Grid.Column="1" Margin="9,0,-2,-1"/>
                            <TextBox MaxLength="60" 
                                     x:Name="LoginTextBox" 
                                     TextChanged="txtEmail_TextChanged" 
                                     Foreground="{DynamicResource PrimaryTextColor}"  
                                     Style="{StaticResource textBox}" 
                                     Background="{DynamicResource TertiaryBackgroundColor}" />
                        </Grid>
                    </Border>
                    <Border x:Name="passwordBorder" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            Background="{DynamicResource TertiaryBackgroundColor}"  
                            CornerRadius="5"
                            Height="40" 
                            Width="259">
                        <Grid Margin="7 9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Source="/Assets/Images/Lock.png" 
                                   Height="20" />
                            <TextBlock x:Name="textPassword" 
                                       MouseDown="textPassword_MouseDown" 
                                       Text="Password" Style="{StaticResource textHint}" 
                                       Foreground="{DynamicResource PrimaryTextColor}"  
                                       Grid.Column="1"
                                       Margin="9,0,-2,5"
                                       Height="38" 
                                       VerticalAlignment="Top" 
                                       HorizontalAlignment="Left" 
                                       Width="214" />
                            <PasswordBox MaxLength="60"
                                         x:Name="PasswordTextBox" 
                                         PasswordChanged="PasswordBox_PasswordChanged"
                                         Style="{StaticResource textBox}" 
                                         Foreground="{DynamicResource PrimaryTextColor}" 
                                         Background="{DynamicResource TertiaryBackgroundColor}" />
                        </Grid>
                    </Border>
                    <TextBlock x:Name="LoginPassworError" 
                               Text="Invalid password or login" 
                               FontSize="13" 
                                Foreground="DarkRed" 
                               Margin="30 0 0 0"/>
                    <CheckBox x:Name="SaveLoginCheckBox" 
                              Margin="30 5 0 0" 
                              Foreground="{DynamicResource PrimaryTextColor}" 
                              Content="Remember me" 
                              Style="{DynamicResource textBox}"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border
                        Grid.Row="0"
                        Background="{DynamicResource PrimaryTextColor}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Margin="30 30 30 0">
                            <Button x:Name="LogInButton"
                            Background="{DynamicResource PrimaryTextColor}"
                            Foreground="{DynamicResource PrimaryBackgroundColor}"
                                BorderThickness="0"
                                Margin="30 5 30 5"
                                FontSize="18"
                            Content="LogIn" 
                                    Click="LogInButton_Click"
                                    MouseEnter="LogInButton_MouseEnter"
                                MouseLeave="LogInButton_MouseLeave"/>
                        </Border>

                        <Border
                         Grid.Row="1"
                         Background="{DynamicResource SecundaryBackgroundColor}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Margin="30 10 30 0">
                            <Button x:Name="SignUpButton"
                                 Background="{DynamicResource SecundaryBackgroundColor}"
                            Foreground="{DynamicResource PrimaryTextColor}"
                                BorderThickness="0"
                                Margin="30 0 30 0"
                                FontSize="18"
                            Click="SignUpButton_Click"
                            Content="SignUp">
                            </Button>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Window>
